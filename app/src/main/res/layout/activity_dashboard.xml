<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--    <com.google.android.material.appbar.AppBarLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="50dp">-->

<!--    </com.google.android.material.appbar.AppBarLayout>-->




    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/image_slider"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:sliderAnimationDuration="500"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderAutoCycleEnabled="true"
        app:sliderCircularHandlerEnabled="true"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorSelectedColor="#5A5A5A"
        app:sliderIndicatorUnselectedColor="#FFF"
        app:sliderScrollTimeInSec="3"
        app:sliderStartAutoCycle="true"
        android:layout_below="@+id/header_view"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_tool"
        android:layout_gravity="center_horizontal"
        app:tabMode="scrollable"
        app:tabIndicatorColor="@color/textcolor"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        app:tabMaxWidth="1000dp"
        android:layout_below="@+id/image_slider"
        >
    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_above="@+id/navigation"
        android:layout_below="@+id/tab_layout"
        />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EBEAEA"
        android:foreground="?attr/selectableItemBackground"
        app:itemTextColor="@drawable/bottom_nav_color"
        app:itemIconTint="@drawable/bottom_nav_color"
        app:menu="@menu/navigation"
        android:layout_alignParentBottom="true"
        />

    <RelativeLayout
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/custom_tool">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobility"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"/>
        <RelativeLayout
            android:id="@+id/search_lay"
            android:layout_width="185dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/title"
            android:layout_marginLeft="10dp"
            android:background="@drawable/search_back">

            <ImageView
                android:id="@+id/srch_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/search"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"/>

            <EditText
                android:id="@+id/search_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingLeft="5dp"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:layout_toRightOf="@+id/srch_img"
                android:hint="Search here"
                android:paddingRight="5dp"/>

        </RelativeLayout>
<!--        <EditText-->
<!--            android:layout_width="185dp"-->
<!--            android:layout_height="35dp"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:layout_toRightOf="@+id/title"-->
<!--            android:layout_marginLeft="10dp"-->
<!--            android:hint="Search here"-->
<!--            android:paddingLeft="5dp"-->
<!--            android:imeOptions="actionSearch"-->
<!--            android:inputType="text"-->
<!--            android:maxLines="1"-->
<!--            android:background="@drawable/search_back"-->
<!--            />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/search_lay"
            android:layout_toLeftOf="@+id/menu_img">
            <ImageView
                android:id="@+id/call_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/call"
                android:layout_centerInParent="true"
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/menu_img"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/menu" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/menu_optn_view"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/cardview_light_background"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/profile_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="My Profile"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/ledger_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:text="My Ledger"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/order_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:text="My Orders"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/change_user_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:text="Becomes a Seller"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/about_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:text="About Us"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/help_sprt_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:text="Help &amp; Support"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3d3d3"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/logout_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="#C71C1C"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:text="Logout"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"/>



    </LinearLayout>


</RelativeLayout>