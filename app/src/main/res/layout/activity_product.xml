<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_above="@+id/navigation">-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/image_slider"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:sliderAnimationDuration="500"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderCircularHandlerEnabled="true"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="3"
                app:sliderStartAutoCycle="true"
                android:layout_below="@+id/header_view"/>

            <TextView
                android:id="@+id/prod_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_slider"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Name"
                android:maxLines="2"
                android:layout_marginLeft="5dp"
                android:visibility="visible"/>


            <TextView
                android:id="@+id/prod_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prod_des"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="price"
                android:textColor="#E23838"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/prod_des"
                android:gravity="center"
                android:text="Prices"
                android:layout_marginTop="5dp"
                android:textColor="@color/textcolor"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_price"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:id="@+id/rel_price">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_brand"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/rel_price"
                android:gravity="center"
                android:text="Select Brand"
                android:background="@drawable/custom_tool"
                android:textColor="@color/textcolor"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/lnr_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_brand"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:padding="3dp"
                android:layout_above="@+id/add_to_cart">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/prod_brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_brand"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/custom_tool"
                android:text="Add to cart"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

<!--    </ScrollView>-->

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EBEAEA"
        android:foreground="?attr/selectableItemBackground"
        app:itemIconTint="@color/textcolor"
        app:itemTextColor="@color/textcolor"
        app:menu="@menu/product_navigation"
        android:visibility="gone"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
