<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            card_view:cardElevation="4dp"
            card_view:cardPreventCornerOverlap="false"
            >

            <RelativeLayout
                android:id="@+id/full_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/sub_cat_img"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/test"
                    android:layout_margin="2dp"/>

                <TextView
                    android:id="@+id/des_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Content here vad  sdahdhva aghsvdghvad  ghdgavd  ghghdhasfdh hadyh"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/sub_cat_img"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:maxLines="2"
                    android:layout_marginBottom="5dp"/>



                <View
                    android:id="@+id/view_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#000000"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_below="@+id/des_txt"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/sub_cat_img"/>

                <TextView
                    android:id="@+id/name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/sub_cat_img"
                    android:layout_below="@+id/view_line"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@color/textcolor"
                    />

                <TextView
                    android:id="@+id/moq_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MOQ:  100"
                    android:textColor="@color/colorAccent1"
                    android:layout_below="@+id/name_txt"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/sub_cat_img"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>