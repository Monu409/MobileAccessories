<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:id="@+id/lnr_top"
        android:background="@drawable/button_background"
        android:layout_alignParentTop="true"
        >
    <TextView
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="MODEL"
        android:id="@+id/txt_select_brand"
       android:gravity="left"
        android:textColor="#ffffff"
        android:layout_weight="1"
        android:padding="2dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"

        />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_qty"
            android:layout_weight="0.5"
            android:text="QTY"
            android:textColor="#ffffff"
            android:gravity="center|center_vertical"
            android:padding="2dp"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/cancel"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="2dp"
            android:layout_toRightOf="@+id/lnr_top"
            android:id="@+id/img_cancel"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/product_recyler"
        android:layout_above="@+id/lnr_bottom"
        android:layout_below="@+id/lnr_top"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="4dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/lnr_bottom"
        >

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/btn_save"
        android:text="Submit"
        android:textColor="#ffffff"
        android:background="@drawable/button_background"
        android:layout_weight="1"
        android:padding="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="3dp"
       />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_order"
            android:text="Order Qty"
            android:textColor="#ffffff"
            android:background="@drawable/button_background"
            android:padding="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
           />
    </LinearLayout>
</RelativeLayout>