<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lnr_bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/prod_img"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/test"
                 />

            <TextView
                android:id="@+id/prod_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prod_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Name"
                android:maxLines="2"
                android:layout_marginLeft="5dp"
                android:visibility="visible"/>


            <TextView
                android:id="@+id/prod_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prod_des"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="price"
                android:textColor="#E23838"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/prod_des"
                android:gravity="center"
                android:text="Prices"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/textcolor"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_price"
                android:layout_margin="2dp"

                android:orientation="vertical"
                android:id="@+id/rel_price">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_brand"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/rel_price"
                android:gravity="center"
                android:text="Select Brand"
                android:background="@color/colorPrimary"
                android:textColor="@color/textcolor"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/lnr_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_brand"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:padding="3dp">



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/prod_brand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_brand"
                    android:layout_margin="2dp"
                    android:layout_weight="1" />


            </LinearLayout>

            <TextView
                android:id="@+id/txt_modal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnr_brand"
                android:gravity="center"
                android:text="Select Model"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/lnr_modal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_modal"
                android:background="@drawable/layout_background"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:padding="3dp"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/prod_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:visibility="visible" />

            </LinearLayout>


         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Slected Product"
             android:layout_below="@+id/lnr_brand"
             android:id="@+id/txt_selcted_prod"
             android:visibility="gone"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_selected_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:visibility="gone"
                android:layout_below="@+id/txt_selcted_prod"
                />

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/lnr_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="2dp"
        android:background="@color/grey"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/add_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Add To Cart"
            android:textColor="@color/textcolor"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/textcolornew" />

        <TextView
            android:id="@+id/buy_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Buy Now"
            android:textColor="@color/textcolor"
            android:textStyle="bold" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EBEAEA"
        android:foreground="?attr/selectableItemBackground"
        app:itemIconTint="@color/textcolor"
        app:itemTextColor="@color/textcolor"
        app:menu="@menu/product_navigation"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
