<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B1ACAC">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/send_view"
        android:id="@+id/chat_list">

    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/send_view"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner"
        android:layout_alignParentBottom="true">
        <EditText
            android:id="@+id/send_msg_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingLeft="5dp"
            android:hint="Type a message"
            android:layout_toLeftOf="@+id/line_view"/>

        <ImageView
            android:id="@+id/attach_img"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_toLeftOf="@+id/line_view"
            android:src="@drawable/attach"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"/>

        <View
            android:id="@+id/line_view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_toLeftOf="@+id/send_img"
            android:layout_marginRight="5dp"
            />

        <ImageView
            android:id="@+id/send_img"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/sent_msg"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</RelativeLayout>