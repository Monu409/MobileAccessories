<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:orientation="vertical"
    android:padding="2dp"
    android:layout_width="match_parent"
    android:layout_height="85dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            card_view:cardElevation="4dp"
            card_view:cardPreventCornerOverlap="false"
            >

            <RelativeLayout
                android:id="@+id/full_view"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <com.app.mobilityapp.app_utils.CircleImageView
                    android:id="@+id/brand_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/test"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:text="Title"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#d3d3d3"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/brand_img"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/view_line"/>

                <TextView
                    android:id="@+id/qty_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Total Items: 0"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/brand_img"
                    android:layout_below="@+id/view_line"
                    />

                <TextView
                    android:id="@+id/bye_now_txt"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@color/bottom_lay_color1"
                    android:gravity="center"
                    android:text="Buy Now"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/textcolornew"
                    android:layout_below="@+id/view_line"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:id="@+id/view_line1"/>
    </LinearLayout>

</RelativeLayout>