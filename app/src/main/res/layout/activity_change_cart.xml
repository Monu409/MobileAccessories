<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cart_full_view"
        android:visibility="gone">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cart_list"
            android:layout_above="@+id/bottom_view"/>

        <LinearLayout
            android:id="@+id/bottom_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@drawable/custom_tool">
            <TextView
                android:id="@+id/checkout_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Confirm Order"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/textcolor"
                android:textStyle="bold"/>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:id="@+id/empty_cart_view">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Cart Data Available"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/continue_shop_txt"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:text="Continue Shoping"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@color/bottom_lay_color"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>


</RelativeLayout>